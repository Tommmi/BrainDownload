<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.LearnPage"
             xmlns:vm="clr-namespace:App1.ViewModels"
             xmlns:htmlLabel="clr-namespace:LabelHtml.Forms.Plugin.Abstractions;assembly=HtmlLabel.Forms.Plugin"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:LearnViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <htmlLabel:HtmlLabel Text="{Binding HtmlString}" TextColor="Black"  BackgroundColor="White"/>
            </StackLayout>
        </ScrollView>
        <StackLayout Grid.Row="1" Orientation="Horizontal" Padding="30,24,30,24" Spacing="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="10,10,10,0" Text="{Binding FailedBttnText}"
                        Command="{Binding OnFailedBttnCmd}"
                        BackgroundColor="{StaticResource Red}"
                        TextColor="White" 
                        IsEnabled="{Binding IsFailedBttnEnabled}"
                        IsVisible="{Binding IsFailedBttnVisible}"/>
                <Button Grid.Column="1"
                        Margin="10,10,10,0" Text="{Binding MoreOrLessBttnText}"
                        Command="{Binding OnMoreOrLessBttnCmd}"
                        BackgroundColor="{StaticResource Yellow}"
                        TextColor="White" 
                        IsEnabled="{Binding IsMoreOrLessBttnEnabled}"
                        IsVisible="{Binding IsMoreOrLessBttnVisible}"/>
                <StackLayout Margin="10,10,10,0" Grid.Column="2" Orientation="Horizontal" Padding="0,0,0,0" Spacing="0">
                    <Button Margin="0,0,0,0"
                            Text="{Binding WellKnownBttnText}"
                            Command="{Binding OnWellKnownBttnCmd}"
                            BackgroundColor="{StaticResource Green}"
                            TextColor="White" 
                            IsEnabled="{Binding IsWellKnownBttnEnabled}"
                            IsVisible="{Binding IsWellKnownBttnVisible}"/>
                    <Button Margin="0,0,0,0" Text="{Binding NextBttnText}"
                            Command="{Binding OnNextBttnCmd}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White" 
                            IsEnabled="{Binding IsNextBttnEnabled}"
                            IsVisible="{Binding IsNextBttnVisible}"/>
                </StackLayout>
            </Grid>

        </StackLayout>
    </Grid>

</ContentPage>
